<rss xmlns:media="http://search.yahoo.com/mrss/"
    xmlns:py="http://genshi.edgewall.org/"
    version="2.0" >
<channel>
      <title>Search Results at $project.name for $query</title>
      <py:for each="result in results">
      <item>
         <title>${result.title}</title>
         <link>${scheme_netloc + result.href}</link>
         <description>${result.excerpt}</description>
         <pubDate>${rfc822(result.date)}</pubDate>
         <author>${format_author(result.author)}</author>
      </item>
      </py:for>
   </channel>
</rss>